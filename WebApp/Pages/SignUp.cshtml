@page
@model WebApp.Pages.SignUpModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="/css/sign-up.css" />
    <title>Sign-up</title>
</head>
<body>
    <div class="container">
        <div class="split left">
            <footer>
                <p>&copy; 2024 CodeCrafters. All rights reserved.</p>
            </footer>
        </div>

        <div class="split right">
            <span class="topSignUp">
                <img src="~/assets/2_logosimecid.png" />
                <h1>SIMECID</h1>
            </span>
            <h2>Create new account</h2>

            <form class="form-container">
                <div class="sign-up-form">
                    <label for="name">Name</label><br>
                    <input type="text" id="name" name="name" required><br><br>
                </div>

                <div class="sign-up-form">
                    <label for="lastName">Last Name</label><br>
                    <input type="text" id="lastName" name="lastName" required><br><br>
                </div>

                <div class="sign-up-form">
                    <label for="phoneNumber">Phone Number</label><br>
                    <input type="tel" id="phoneNumber" name="phoneNumber" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required><br><br>
                </div>

                <div class="sign-up-form">
                    <label for="email">Email</label><br>
                    <input type="email" id="email" name="email" required><br><br>
                </div>

                <div class="sign-up-form">
                    <label for="password">Password</label><br>
                    <input type="password" id="password" name="password" required><br><br>
                </div>

                <div class="sign-up-form">
                    <label for="sex">Sex</label><br>
                    <select id="sex" name="sex" style="width: 30vw; height: 2vh;" required>
                        <option value="" disabled selected hidden>Select your gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select><br><br>
                </div>

                <div class="sign-up-form">
                    <label for="birthdate">Birth Date</label><br>
                    <input type="date" id="birthdate" name="birthdate" required><br><br>
                </div>

                <div class="sign-up-form">
                    <label for="address">Address</label><br>
                    <textarea id="address" name="address" required style="width: 600px; height: 48px;"></textarea><br><br>
                </div>

                <button class="btn" type="submit" style="margin-left: 350px;">Create Account</button>
            </form>


        </div>
    </div>

    <script src=""></script>
</body>
</html>
