    <div class="gestionDePerfilDeUsuario">
        <form id="uploadForm" class="form-container" enctype="multipart/form-data">
            <h1 class="fontTitle">Prescription parameters</h1>
            <div class="sign-up-form">
                <label class="birthdate" for="textId">Prescription Id</label>
                <input type="number" id="txtId" name="textId" required/><br /><br />
            </div>
            <div class="sign-up-form">
                <label class="birthdate" for="prescriptionName">Prescription Name</label><br>
                <input type="text" id="prescriptionName" name="prescriptionName" required><br><br>
            </div>
            <div class="sign-up-form">
                <label for="medicationName">Medication name</label><br>
                <input type="text" id="medicationName" name="medicationName" required><br><br>
            </div>

            <div class="sign-up-form">
                <label class="birthdate" for="date">Date</label><br>
                <input type="date" id="prescriptionDate" name="date" required><br><br>
            </div>
            <div class="sign-up-form">
                <label for="recommendations">Recommendations</label><br>
                <textarea id="recommendations" name="recommendations" required></textarea><br><br>
            </div>

            <div class="sign-up-form">

                <label for="medicationName">Patient Id</label><br>
                <input type="text" id="TxtUserId" name="patientId" required><br><br>
            </div>

            <div class="sign-up-form">
                <label for="medicationName">Doctor Id</label><br>
                <input type="text" id="TxtDoctorId" name="doctorId" required><br><br>

            </div>

            <div class="sign-up-form">
                <label for="file">Photo</label><br>
                <input name="file" type="file" id="profileImage" accept="image/*">
            </div>

            <div style="display:flex">
                <button class="btn" type="submit" id="btnCreate" style="margin-top: 6%">Create</button>
                <button class="btn" type="submit" id="btnUpdate" style="margin-top: 6%">Update</button>
                <button class="btn" type="submit" id="btnDelete" style="margin-top: 6%">Delete</button>
            </div>
        </form>
    </div>

