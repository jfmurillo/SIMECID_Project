    </div>


    <div class="gestionDePerfilDeUsuario" style="margin-top:5%">
        <h1 class="fontTitle">Prescription History</h1>
        <p class="UserDetails">Appointment details</p>

        <!--Aca tabla service history tabla-->
        <div class="row" style="margin-left: 20%">
            <div class="col-lg-12">
                <table id="tblPrescriptions" class="table table-hover display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Prescription Id</th>
                            <th>Patient Id</th>
                            <th>Doctor Id</th>
                            <th>Prescription Name</th>
                            <th>Medication Name</th>
                            <th>Prescription Date</th>
                            <th>Recommendations</th>
                            <th>Uploaded file</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

