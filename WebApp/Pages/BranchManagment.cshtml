    <script>
        // Función para actualizar el mapa con la dirección proporcionada
        function updateMap() {
            // Obtener la dirección ingresada por el usuario
            var address = document.getElementById('TxtAddress').value;

            // Obtener la clave de API de Google Maps
            var apiKey = 'AIzaSyBDaeWicvigtP9xPv919E-RNoxfvC-Hqik';

            // Construir la URL del mapa de Google Maps con la dirección y la clave de API
            var mapUrl = 'https://www.google.com/maps/embed/v1/place?q=' + encodeURIComponent(address) + '&key=' + apiKey;

            // Actualizar el atributo 'src' del iframe con la nueva URL del mapa
            $('.ClassMap').attr('src', mapUrl);
        }

        // Asociar la función updateMap al evento click de los botones Register y Update
        $(document).ready(function () {
            $('#btnCreate, #btnUpdate').click(function () {
                updateMap();
            });
        });
    </script>

