	<link rel="icon" href="~/assets/2_logosimecid.png" type="image/x-icon"   />
    


</head>

<!------- SIDEBAR ------>
<div class="sidebar">
    <!------- Logo y titulo ------>
    <div class="containerLogo">
        <img src="~/Assets/LogoSIMECID.png" class="logoMini" />
    </div>
    <!------- Icono y nombre del usuario, e icono de settings------>
    <div class="containerUser">
        <!--Boton para ver el perfil de usuario (no es lo mismo que gestion de users)-->
        <form asp-page="/Doctor-Profile">
            <button class="buttonUser">
                <img src="~/assets/defaultpictureprofile.png" class="userIcon" />
                <div class="fontTitleNavBar userName">Profile</div>
            </button>
        </form>
        <!--Boton para ir a los settings-->
        <form asp-page="/Doctor-Settings">
            <button class="buttonSettings">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-gear-fill settingsIcon" viewBox="0 0 16 16">
                    <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z" />
                </svg>
            </button>
        </form>
    </div>

    <div class="MainMenu">
        <form asp-page="/Doctor-Appointment">
            <button class="buttonMenu" id="appointmentsMenuId">Appointments</button>
        </form>      
        <form asp-page="/Doctor-Examination">
            <button class="buttonMenu" id="examinationMenuId">Examination</button>
        </form>
        <form asp-page="/Doctor-Prescription">
            <button class="buttonMenu" id="prescriptionsMenuId">Prescriptions</button>
        </form>
        <form asp-page="/Doctor-MedicalReport">
            <button class="buttonMenu" id="medicalReportMenuId">Medical Report</button>
        </form>
        <div class="sidebarFooter">2024 Codecrafters All Right Reserved to </div>
    </div>

</div>

<!------- CONTENIDO PRINCIPAL --------->
<body class="main-content" style="align-content: center; align-items:center; margin-left:25%">
    <div class="profileHeader" style="width: 114.3%;">
    </div>

        <div class="table-container">
        <h1 class="fontTitle">Make your appointments</h1>

            <p>Select your Appointment</p>
            <table id="tblAppointments">
                <thead>
                    <tr>
                        <th>Appointment Id</th>
                        <th>Patient Id</th>
                        <th>Patient Name</th>
                        <th>Patient Last Name</th>
                        <th>Doctor Id</th>
                        <th>Doctor Name</th>
                        <th>Doctor Last Name</th>
                        <th>Service Id</th>
                        <th>Service Name</th>
                        <th>Branch Id</th>
                        <th>Branch Name</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Text</th>
                        <th>Status</th>
                    </tr>
                </thead>
            </table>
        </div>

    <form class="form-container" style="margin-left:43%">
            <div>
                <label for="txtId">Appointment ID</label><br />
                <input type="number" id="txtId" name="txtAppointmentId"/>
            </div><br />
            <div>
                <label for="txtPatientId">Patient ID</label><br />
                <input type="number" id="patientId" />
            </div><br />
            <div>
                <label for="txtPatientName">Patient Name</label><br />
                <input type="text" id="txtPatientName" />
            </div><br />
            <div>
                <label for="txtPatientLastName">Patient Last Name</label><br />
                <input type="text" id="txtPatientLastName" />
            </div><br />
            <div>
                <label for="DoctorId">Doctor ID</label><br />
                <input type="number" id="doctorId" />
            </div><br />
            <div>
                <label for="DoctorName">Doctor Name</label><br />
                <input type="text" id="doctorName" />
            </div><br />
            <div>
                <label for="DoctorLastName">Doctor Last Name</label><br />
                <input type="text" id="doctorLastName" />
            </div><br />

            <div>
                <label for="txtServiceId">Service Id</label><br />
                <input type="number" id="serviceId" />
            </div><br />
            <div>
                <label for="txtServiceName">Service Name</label><br />
                <input type="text" id="txtServiceName" />
            </div><br />
            <div>
                <label for="txtBranchId">Branch Id</label><br />
                <input type="number" id="branchId" />
            </div><br />
            <div>
                <label for="txtBranchName">Branch Name</label><br />
                <input type="text" id="txtBranchName" />
            </div><br />
        <h1 class="fontTitle" style="margin-left:-50%">Choose your date</h1>
            <div class="date-form">
                <label class="appointDate" for="birthdate">Appointment Date</label><br>
            <input style="width:60%" type="datetime-local" id="txtStartTime" name="birthdate" required><br><br>
            </div><br />
            <div>
                <label for="txtReason">Text</label><br />
                <input type="text" id="text" />
            </div><br />
            <div>
                <label for="txtStatus">Status</label><br />
                <input type="text" id="status" />
            </div><br />
            <br />
            <div style="flex-wrap: ">

                <button style="margin-left:10%" class="btn" type="button" id="btnDelete">Delete</button>
            </div>
        </form>

    </div>

    <script src="~/lib/daypilot/daypilot-all.min.js" asp-append-version="true"></script>
	<script src="~/js/pages/calendar.js"></script>
</body>
</html>