@page
@model WebApp.Pages.Secretary_ProfileModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />

    <link href="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/controlactions.js"></script>

    <title>SimecidApp</title>

    <link href="~/css/userprofile.css" rel="stylesheet" />
</head>


<!------- SIDEBAR ------>
<div class="sidebar">
    <!------- Logo y titulo ------>
    <div class="containerLogo">
        <img src="~/Assets/LogoSIMECID.png" class="logoMini" />
    </div>
    <!------- Icono y nombre del usuario, e icono de settings------>
    <div class="containerUser">
        <!--Boton para ver el perfil de usuario (no es lo mismo que gestion de users)-->
        <form asp-page="/Secretary-Profile">
            <button class="buttonUser">
                <img src="~/assets/defaultpictureprofile.png" class="userIcon" />
                <div class="fontTitle userName">Profile</div>
            </button>
        </form>
        <!--Boton para ir a los settings-->
        <form asp-page="/Secretary-Settings">
            <button class="buttonSettings">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-gear-fill settingsIcon" viewBox="0 0 16 16">
                    <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z" />
                </svg>
            </button>
        </form>
    </div>

    <div class="MainMenu">
        <form asp-page="/Secretary-Appointment">
            <button class="buttonMenu" id="appointmentsMenuId">Appointments</button>
        </form>
        <form asp-page="/Secretary-MedicalReport">
            <button class="buttonMenu" id="medicalReportMenuId">Medical Report</button>
        </form>
        <div class="sidebarFooter">2024 Codecrafters All Right Reserved to </div>
    </div>

</div>

<!------- CONTENIDO PRINCIPAL --------->
<body class="main-content">
    <div class="profileHeader">
        <img src="" alt="Foto de Perfil" class="profilePic">
    </div>
    <div class="gestionDePerfilDeUsuario">
        <form class="form-container">
            <h1 class="fontTitle">Edit profile</h1>
            <p class="UserDetails">Secretary details</p>
            <div class="sign-up-form">
                <label for="name">Name</label><br>
                <input type="text" id="name" name="name" required><br><br>
            </div>

            <div class="sign-up-form">
                <label for="lastName">Last Name</label><br>
                <input type="text" id="lastName" name="lastName" required><br><br>
            </div>

            <div class="sign-up-form">
                <label for="phoneNumber">Phone Number</label><br>
                <input type="tel" id="phoneNumber" name="phoneNumber" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required><br><br>
            </div>

            <div class="sign-up-form">
                <label for="email">Email</label><br>
                <input type="email" id="email" name="email" required><br><br>
            </div>

            <div class="sign-up-form">
                <label for="sex">Gender</label><br>
                <select id="sex" name="sex" required>
                    <option value="" disabled selected hidden>Select your gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select><br><br>
            </div>

            <div class="sign-up-form">
                <label class="birthdate" for="birthdate">Birth Date</label><br>
                <input type="date" id="birthdate" name="birthdate" required><br><br>
            </div>

            <div class="sign-up-form">
                <label for="address">Address</label><br>
                <textarea id="address" name="address" required></textarea><br><br>
            </div>
            <div class="buttonContainer">
                <button class="btn" type="submit">Update</button>
            </div>
        </form>
    </div>
    <script src="~/js/pages/profiledata.js"></script>
</body>
</html>


