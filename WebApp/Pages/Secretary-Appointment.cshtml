        <div class="sidebarFooter">2024 Codecrafters All Right Reserved to </div>
    </div>

</div>

<!------- CONTENIDO PRINCIPAL --------->
<body class="main-content">
    <div class="profileHeader">
    </div>
    <div class="gestionDeCitas">
        <h1 class="fontTitle">Make your appointments</h1>
        <div class="row">
            <div class="col-lg-12">
                <table id="tblAllBranches" class="display table table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>BranchId</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Description</th>
                            @* <th>ServiceId</th>
                            <th>ServiceName</th>
                            <th>ServicePrice</th>
                            <th>ServiceTax</th> *@
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="row">
            <h2 class="serviceTitle">Choose your prefered service</h2>
            <div class="col-lg-12">
                <table id="tblBranch" class="table table-hover display" style="width:100%">
                    <thead>
                        <tr>
                            <th>BranchId</th>
                            <th>Name</th>
                            <th>ServiceId</th>
                            <th>ServiceName</th>
                            <th>Price</th>
                            <th>Tax</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>

        <form class="form-container" style="justify-content:center">
            <p>Confirm your appointment details</p>
            <div>

                <input type="number" id="txtPatientId" hidden />
            </div>
            <div>

                <input type="number" id="DoctorId" hidden />
            </div>
            <div class="form-field">
                <p>Branch id</p>
                <input type="number" class="formularyform" id="BranchId">
            </div>
            <div class="form-field">
                <p>Service id</p>
                <input type="number" class="formularyform" id="ServiceId">
            </div>
            <br />
            <div>
                <label for="reason">Reason</label>
                <input type="text" id="txtReason" name="reason" />
            </div>

            <br />
            <h1 class="fontTitle">Choose your date</h1>
            <div class="date-form">
                <label class="appointDate" for="AppDate">Appointment Date</label><br>
                <input type="datetime-local" id="startTime" name="AppDate" required><br><br>
            </div><br />
            <div>
                <label for="status">Status</label>
                <input type="text" id="txtStatus" name="status" />
            </div><br />
            <div>
                <button id="btnCreate" class="btn-send" type="submit">Confirm your appointment</button>
            </div>
        </form>

    </div>

    <!--CALENDARIO-->
    <div>

        <div class="calendarAndTable">
            <div style="display: flex">
                <div style="margin-right: 10px;">
                    <div id="nav"></div>
                </div>
                <div style="flex-grow: 1;">

                    <div class="toolbar">
                        Theme: <select id="theme">
                            <option value="calendar_default">Default</option>
                            <option value="calendar_white" selected>White</option>
                            <option value="calendar_green">Green</option>
                            <option value="calendar_traditional">Traditional</option>
                            <option value="calendar_transparent">Transparent</option>
                        </select>
                    </div>
                    <div id="dp"></div>
                </div>
            </div>

        </div>

        <!--TABLA DE APPOINTMENTS-->
        <div class="tableContainer">
            <p>Select your Appointment</p>
            <table id="tblAppointments">
                <thead>
                    <tr>
                        <th>Appointment Id</th>
                        <th>Patient Id</th>
                        <th>Patient Name</th>
                        <th>Patient Last Name</th>
                        <th>Doctor Id</th>
                        <th>Doctor Name</th>
                        <th>Doctor Last Name</th>
                        <th>Service Id</th>
                        <th>Service Name</th>
                        <th>Branch Id</th>
                        <th>Branch Name</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Text</th>
                        <th>Status</th>
                    </tr>
                </thead>
            </table>
        </div>

        <form class="form-container" style="margin-left:43%">
            <div>
                <label for="txtId">Appointment ID</label><br />
                <input type="number" id="txtId" name="txtAppointmentId" />
            </div><br />
            <div>
                <label for="txtPatientId">Patient ID</label><br />
                <input type="number" id="patientId" />
            </div><br />
            <div>
                <label for="txtPatientName">Patient Name</label><br />
                <input type="text" id="txtPatientName" />
            </div><br />
            <div>
                <label for="txtPatientLastName">Patient Last Name</label><br />
                <input type="text" id="txtPatientLastName" />
            </div><br />
            <div>
                <label for="DoctorId">Doctor ID</label><br />
                <input type="number" id="doctorId" />
            </div><br />
            <div>
                <label for="DoctorName">Doctor Name</label><br />
                <input type="text" id="doctorName" />
            </div><br />
            <div>
                <label for="DoctorLastName">Doctor Last Name</label><br />
                <input type="text" id="doctorLastName" />
            </div><br />

            <div>
                <label for="txtServiceId">Service Id</label><br />
                <input type="number" id="serviceId" />
            </div><br />
            <div>
                <label for="txtServiceName">Service Name</label><br />
                <input type="text" id="txtServiceName" />
            </div><br />
            <div>
                <label for="txtBranchId">Branch Id</label><br />
                <input type="number" id="branchId" />
            </div><br />
            <div>
                <label for="txtBranchName">Branch Name</label><br />
                <input type="text" id="txtBranchName" />
            </div><br />
            <h1 class="fontTitle" style="margin-left:-50%">Choose your date</h1>
            <div class="date-form">
                <label class="appointDate" for="birthdate">Appointment Date</label><br>
                <input style="width:43%" type="datetime-local" id="txtStartTime" name="birthdate" required><br><br>
            </div><br />
            <div>
                <label for="txtReason">Text</label><br />
                <input type="text" id="text" />
            </div><br />
            <div>
                <label for="txtStatus">Status</label><br />
                <input type="text" id="status" />
            </div><br />
            <br />
            <div style="flex-wrap; margin-left:-30% ">
                <button class="btn" type="submit">Pay</button>
                <button class="btn" type="submit" id="btnUpdate">Update</button>
                <button class="btn" type="submit" id="btnDelete">Delete</button>
            </div>
        </form>

    </div>

    <script src="~/lib/daypilot/daypilot-all.min.js" asp-append-version="true"></script>
	<script src="~/js/pages/calendar.js"></script>
    <script src="~/js/redirect/secretaryredirect.js"></script>
    <script src="~/js/pages/secretarydata.js"></script>
    <script src="~/js/pages/appointmentmanager.js"></script>
</body>
</html>
