@page
@model WebApp.Pages.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="/css/log-in.css" />
    <title>Log-In</title>
</head>
<body>
    <div class="container">
        <div class="split left">
            <footer>
                <p>&copy; 2024 CodeCrafters. All rights reserved.</p>
            </footer>
        </div>

        <div class="split right">
            <span class="topSignUp">
                <img src=" ~ /assets/2_logosimecid.png" />" alt="logo-simecid">
                <h1>SIMECID</h1>
            </span>
            <h2>Hello!</h2>

            <form class="form-container">
                <div class="sign-up-form">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required><br><br>
                </div>

                <div class="sign-up-form">
                    <label for="password">Password</label><br>
                    <input type="password" id="password" name="password" required><br><br>
                </div>
                <a class="frgtPwd" href="">Did you forget your password?</a>
                <button class="btn" type="submit" style="margin-left: 350px;">Log In</button>
            </form>
        </div>
    </div>
    <script src=""></script>
</body>
</html>
