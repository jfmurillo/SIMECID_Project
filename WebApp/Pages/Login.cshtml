        document.getElementById("btn").addEventListener("onClick", redirect);
        function redirect() {
            window.location.href = "/UserProfile";
        };
    </script> *@


    <title>Log-In</title>
</head>
<body>
    <div class="container">
        <div class="split left">
            <footer>
                <p>&copy; 2024 CodeCrafters. All rights reserved.</p>
            </footer>
        </div>

        <div class="split right">
            <span class="topSignUp">
                <img src="/Assets/logo-white.png" />
                <h1>SIMECID</h1>
            </span>
            <h2>Hello!</h2>

            <form class="form-container" id="loginForm">
                <div class="sign-up-form">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required><br><br>
                </div>

                <div class="sign-up-form">
                    <label for="password">Password</label><br>
                    <input type="password" id="password" name="password" required><br><br>
                </div>
                <div>
                <a class="frgtPwd" asp-area="" asp-page="/RecoverPass-Email">Did you forget your password?</a>
                </div>
            </form>

            <form asp-page="/UserProfile">
                <button id="btn" class="btn" style="margin-left: 460px;">Log In</button>
            </form>
     
        </div>
    </div>

</body>
</html>
