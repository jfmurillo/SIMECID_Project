<!--CONTENIDO PRINCIPAL-->
<body class="main-content">

    <div class="profileHeader">
    </div>

    <div class="gestionDePerfilDeUsuario" style="margin-top:5%">
        <h1 class="fontTitle">Patient Details</h1>

        <!--TABLA DE PACIENTES-->
        <div class="row" style="margin-left: 20%">
            <div class="col-lg-12">
                <table id="tblPatientInfo" class="table table-hover" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Last Name</th>
                            <th>PhoneNumber</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Province</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

    <!--FORMULARIO-->
    <div class="gestionDePerfilDeUsuario">
        <form class="form-container">
            <h1 class="fontTitle">Exam Parameters</h1>

            <div class="sign-up-form">
                <label for="patientId">Patient Id</label><br>
                <input type="text" id="patientId" name="patientId" required><br><br>
            </div>

            <div class="sign-up-form">
                <label for="Id">Examn Id</label><br>
                <input type="number" id="TxtmedicalExamId" name="Id" required><br><br>
            </div>

            <div class="sign-up-form">
                <label for="Type">Type</label><br>
                <select id="TxtexamType" name="Type" required>
                    <option value="" disabled selected>Select exam type</option>
                    <option value="Colonoscopy">Colonoscopy</option>
                    <option value="Endoscopy">Endoscopy</option>
                    <option value="Electroencephalogram (EEG)">Electroencephalogram (EEG)</option>
                    <option value="Complete blood count (CBC)">Complete blood count (CBC)</option>
                    <option value="Lipid profile">Lipid profile</option>
                    <option value="Comprehensive metabolic panel">Comprehensive metabolic panel</option>
                    <option value="Kidney function test">Kidney function test</option>
                    <option value="Liver function test">Liver function test</option>
                    <option value="Blood glucose test">Blood glucose test</option>
                    <option value="A1C test (for diabetes)">A1C test (for diabetes)</option>
                    <option value="Thyroid test (TSH, T4)">Thyroid test (TSH, T4)</option>
                    <option value="Cancer screening">Cancer screening</option>
                    <option value="STD screening">STD screening</option>
                    <option value="Cardiovascular risk assessment">Cardiovascular risk assessment</option>
                    <option value="X-ray">X-ray</option>
                    <option value="Ultrasound">Ultrasound</option>
                    <option value="Magnetic resonance imaging (MRI)">Magnetic resonance imaging (MRI)</option>
                    <option value="Computed tomography (CT)">Computed tomography (CT)</option>
                    <option value="Mammography">Mammography</option>
                    <option value="Bone densitometry">Bone densitometry</option>
                    <option value="Electrocardiogram (ECG/EKG)">Electrocardiogram (ECG/EKG)</option>
                </select>
            </div>



            <!--Aqui pide la fecha que no se pueda en el pasado-->
            <div class="sign-up-form">
                <label class="birthdate" for="date">Date</label><br>
                <input type="datetime-local" id="TxtexamDate" name="date" required><br><br>
            </div>
            <script>
                // Obtener la fecha de hoy en formato yyyy-mm-dd
                var today = new Date().toISOString().split('T')[0];

                // Establecer el atributo min del input date para que no se pueda seleccionar una fecha anterior a hoy
                document.getElementById("TxtexamDate").setAttribute("min", today);
            </script>

            <div class="sign-up-form">
                <label for="weight">Weight Kg</label><br>
                <input type="text" id="Txtweight" name="weight" required><br><br>
            </div>

            <div class="sign-up-form">
                <label for="size">Size Mts</label><br>
                <input type="text" id="Txtsize" name="size" required><br><br>
            </div>

            <!-- BODY MASS (BMI) -->
            <div class="sign-up-form">
                <label for="bodyMass">Body mass (BMI)</label><br>
                <select id="TxtbodyMass" name="bodyMass" required>
                    <option value="BMI less than 18.5: Underweight">BMI less than 18.5: Underweight</option>
                    <option value="BMI between 18.5 and 24.9: Normal weight">BMI between 18.5 and 24.9: Normal weight</option>
                    <option value="BMI between 25.0 and 29.9: Overweight">BMI between 25.0 and 29.9: Overweight</option>
                    <option value="BMI between 30.0 and 34.9: Obesity class 1">BMI between 30.0 and 34.9: Obesity class 1</option>
                    <option value="BMI between 35.0 and 39.9: Obesity class 2">BMI between 35.0 and 39.9: Obesity class 2</option>
                    <option value="BMI of 40 or more: Obesity class 3 (morbid)">BMI of 40 or more: Obesity class 3 (morbid)</option>
                </select><br><br>
            </div>




            <div class="sign-up-form">
                <label for="Notes">Notes</label><br>
                <textarea id="Txtdetails" name="Notes" required></textarea><br><br>
            </div>

            <div class="sign-up-form">
                <label for="examResults">Enter exam results</label><br>
                <textarea id="Txtresult" name="examResults" required></textarea><br><br>
            </div>

            @* <div class="sign-up-form">
            <label for="photoOrFile">Upload a photo or file</label><br>
            <input type="text" id="" name="photoOrFile" required><br><br>
            </div> *@

            <div style="display:flex">
                <button class="btn" type="button" id="btnCreate" style="margin-top: 6%">Create</button>
                <button class="btn" type="button" id="btnUpdate" style="margin-top: 6%">Update</button>
                <button class="btn" type="button" id="btnDelete" style="margin-top: 6%">Delete</button>
            </div>
        </form>
    </div>


    <div class="gestionDePerfilDeUsuario" style="margin-top:5%">
        <h1 class="fontTitle">Exam History</h1>
        <!--MEDICAL EXAM TABLE-->
        <div class="row" style="margin-left: 20%">
            <div class="col-lg-12">
                <table id="tblMedicalExam" class="table table-hover" class="display" style="width:100%" style="margin-bottom:5%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>PatientId</th>
                            <th>Exam type</th>
                            <th>Exman date</th>
                            <th>Notes</th>
                            <th>Weight</th>
                            <th>Size</th>
                            <th>Body mass</th>
                            <th>Result</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <script src="~/js/pages/medicalexam.js"></script>
    <script src="~/js/redirect/doctorredirect.js"></script>
	<script src="~/js/pages/doctordata.js"></script>

</body>
</html>