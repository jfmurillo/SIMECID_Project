                    </tr>
                    <tr id="fila2">
                        <td>2</td>
                        <td>Consulta general</td>
                        <td>Lorem ipsum</td>
                        <td>20.000</td>
                        <td>13.00</td>
                    </tr>
                    <tr id="fila3">
                        <td>3</td>
                        <td>Pediatria</td>
                        <td>Lorem ipsum</td>
                        <td>20.000</td>
                        <td>13.00</td>
                    </tr>
                </tbody>
            </table>
        </div>
        
        <form class="form-container" style="justify-content:center">
            <p>Confirm your appointment details</p>
            <div>
                <label for="branchName">Branch</label><br>
                <input type="text" id="txtBranchName" name="branchName" required>
            </div>
            <div>
                <label for="serviceName">Service</label><br>
                <input type="text" id="txtServiceName" name="serviceName" required>
            </div>
            <div>
                <label for="reason">Reason</label><br>
                <input type="text" id="txtReason" name="reason" required>
            </div>
            <h1 class="fontTitle">Choose your date</h1>
            <div>

                    <!--Aqui va el calendario, donde deben aparecer las citas disponibles-->
            </div>
            <div class="date-form">
                <label class="appointDate" for="birthdate">Fecha de la cita</label><br>
                <input type="date" id="appointDate" name="birthdate" required><br><br>
            </div>
            <div>
                <button id="id_ApptConfirm" class="btn-send" type="submit">Confirm your appointment</button>
            </div>
        </form>
        
    </div>
    <div>
        <div class="table-container">
            <p>Select your Appointment</p>
            <table>
                <thead>
                    <tr id="idServices_tbl">
                        <th>Patient Name</th>
                        <th>Patient Last Name</th>
                        <th>Service Name</th>
                        <th>Branch Name</th>
                        <th>Start Time</th>
