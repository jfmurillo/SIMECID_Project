            </table>
        </div>
        
        <form class="form-container">
            <div>
                <label for="txtPatientName">Patient Name</label>
                <input type="text" id="txtPatientName" />
            </div><br />
            <div>
                <label for="txtPatientLastName">Patient Last Name</label>
                <input type="text" id="txtPatientLastName" />
            </div><br />
            <div>
                <label for="txtServiceName">Service Name</label>
                <input type="text" id="txtServiceName" />
            </div><br />
            <div>
                <label for="txtBranchName">Branch Name</label>
                <input type="text" id="txtBranchName" />
            </div><br />
            <div>
                <label for="txtStartTime">Start Time</label><br />
