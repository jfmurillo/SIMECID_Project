<!------- CONTENIDO PRINCIPAL --------->
<body class="main-content" style="align-content: center; align-items:center">
    <div class="gestionDeCitas">
        <h1 class="fontTitle">Make your appointments</h1>
        <div class="row">
            <div class="col-lg-12">
                <table id="tblAllBranches" class="display table table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>BranchId</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Description</th>
                            @* <th>ServiceId</th>
                            <th>ServiceName</th>
                            <th>ServicePrice</th>
                            <th>ServiceTax</th> *@
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="row">
            <h2 class="serviceTitle">Choose your prefered service</h2>
            <div class="col-lg-12">
                <table id="tblBranch" class="table table-hover display" style="width:100%">
                    <thead>
                        <tr>
                            <th>BranchId</th>
                            <th>Name</th>
                            <th>ServiceId</th>
                            <th>ServiceName</th>
                            <th>Price</th>
                            <th>Tax</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>

        <form class="form-container" style="justify-content:center">
            <p>Confirm your appointment details</p>
            <div>
                <label for="txtPatientName">Patient Name</label>
                <input type="text" id="txtPatientName" />
            </div><br />
            <div>
                <label for="txtPatientLastName">Patient Last Name</label>
                <input type="text" id="txtPatientLastName" />
            </div><br />
            <div class="form-field">
                <input type="number" class="formularyform" id="BranchId" hidden>
            </div>
            <div class="form-field">
                <label for="name">Branch</label>
                <input type="text" id="TxtName" name="name" value="">
            </div>
            <br />
            <div class="form-field">
                <input type="number" class="formularyform" id="ServiceId" hidden>
            </div>
            <div class="form-field">
                <label for="name">Service</label>
                <input type="text" id="textServiceName" name="name" value="">
            </div>
            <br />
            <div>
                <label for="reason">Reason</label>
                <input type="text" id="txtReason" name="reason"/>
            </div>
                
            <br />
            <h1 class="fontTitle">Choose your date</h1>
            <div>
               @*  <!-- div del calendario-->
                <div style="display: flex ">
                    <div style="margin-right: 10px;">
                        <div id="nav"></div>
                    </div>
                    <div style="flex-grow: 1;">
                        <div class="toolbar">
                            Theme:
                            <select id="theme">
                                <option value="calendar_default">Default</option>
                                <option value="calendar_white" selected>White</option>
                                <option value="calendar_green">Green</option>
                                <option value="calendar_traditional">Traditional</option>
                                <option value="calendar_transparent">Transparent</option>
                            </select>
                        </div>
                        <div id="dp"></div>
                    </div>
                </div> *@
                
            </div>
            <div class="date-form">
                <label class="appointDate" for="birthdate">Fecha de la cita</label><br>
                <input type="date" id="txtStartTime" name="birthdate" required><br><br>
            </div>
            <div>
                <button id="btnCreate" class="btn-send" type="submit">Confirm your appointment</button>
            </div>
        </form>

    </div>
    <div>
        <div class="table-container">
            <p>Select your Appointment</p>
            <table id="tblAppointments">
                <thead>
                    <tr>
                        <th>Patient Name</th>
                        <th>Patient Last Name</th>
                        <th>Service Name</th>
                        <th>Branch Name</th>
                        <th>Start Time</th>
                        <th>Text</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr id="fila3">
                        <td>Juan</td>
                        <td>Perez</td>
                        <td>Lorem ipsum</td>
                        <td>Alajuela</td>
                        <td>2023</td>
                        <td>Malo</td>
                        <td>Malo</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <form class="form-container">
            <div>
                <label for="txtPatientName">Patient Name</label>
                <input type="text" id="txtPatientName" />
            </div><br />
            <div>
                <label for="txtPatientLastName">Patient Last Name</label>
                <input type="text" id="txtPatientLastName" />
            </div><br />
            <div>
                <label for="txtServiceName">Service Name</label>
                <input type="text" id="txtServiceName" />
            </div><br />
            <div>
                <label for="txtBranchName">Branch Name</label>
                <input type="text" id="txtBranchName" />
            </div><br />
            <div>
                <label for="txtStartTime">Start Time</label><br />
                <input type="date" id="txtStartTime" />
            </div><br />
            <div>
                <label for="txtText">Text</label><br />
                <input type="text" id="txtText" />
            </div><br />
            <div>
                <label for="txtStatus">Status</label><br />
                <input type="text" id="txtStatus" />
            </div><br />
            <br />
            <div style="flex-wrap: ">
                <button class="btn" type="submit">Pay</button>
                <button class="btn" type="submit">Update</button>
                <button class="btn" type="submit">Delete</button>
            </div>


        </form>



    </div>
    </div>
